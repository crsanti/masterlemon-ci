{
  "name": "react-testing-library-by-example",
  "version": "1.0.0",
  "description": "Learn how to test react and redux by sample using Jest, each of the samples contains a readme.md file that indicates the purpose of the sample plus an step by step guide to reproduce it.",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --config ./config/webpack/dev.js",
    "prebuild": "rimraf dist",
    "build": "webpack --config ./config/webpack/prod.js",
    "test": "jest -c ./config/test/jest.json --verbose",
    "test:watch": "npm run test -- --watchAll -i",
    "pretest:coverage": "rimraf coverage",
    "test:coverage": "jest -c ./config/test/jest.coverage.json --verbose"
  },
  "author": "Lemoncode",
  "repository": "https://github.com/Lemoncode/react-testing-by-example",
  "license": "MIT",
  "dependencies": {
    "bootstrap-css-only": "^4.4.1",
    "history": "^5.0.0",
    "lc-form-validation": "^2.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@hot-loader/react-dom": "^16.13.0",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.7",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/deep-freeze": "^0.1.2",
    "@types/jest": "^26.0.8",
    "@types/react": "^16.9.44",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.5",
    "@types/webpack-env": "^1.15.2",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^4.2.0",
    "deep-freeze": "0.0.1",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.2.2",
    "react-test-renderer": "^16.13.1",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.9"
  }
}
